from random import choice

print("Добро ожаловать к магическому шару", sep = "\n")
while 1 > 0:#Бесконечный цикл
    print("Задайте свой вопрос:")
    s = input()
    sp = ["Бесспорно", "Предрешено", "Никаких сомнений", "Определённо да","Можешь быть уверен в этом",
          "Мне кажется - да", "Вероятнее всего", "Хорошие перспективы", "Знаки говорят - да", "Да", "Пока неясно, попробуй снова",
          "Спроси позже", "Лучше не рассказывать", "Сейчас нельзя предсказать", "Сконцентрируйся и спроси опять", "Даже не думай",
          "Мой ответ - нет", "По моим данным - нет", "Перспективы не очень хорошие", "Весьма сомнительно"]
    print(choice(sp))
    print('Еще остались вопросы?', 'ДА или Нет:', sep = '\n')
    otvet = input().lower()
    if otvet in 'да':
        continue
    else: break
print('Приходите, когда появятся новые вопросы')  
